// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id Int @default(autoincrement()) @id
    login String @unique
    name String
    password String
    posts Post[]
    comments Comment[]
    role Role
}

model Post {
    id Int @default(autoincrement()) @id
    authorId Int
    author User @relation(fields: [authorId], references: [id])
    headline String
    description String
    images String[]
    comments Comment[]
    createdAt DateTime @default(now())
    rating Int?
    tags Tag[]
}

model Tag {
    id Int @default(autoincrement()) @id
    name String @unique
    posts Post[]
}

model Comment {
    id Int @default(autoincrement()) @id
    authorId Int
    author User @relation(fields: [authorId], references: [id])
    postId Int
    post Post @relation(fields: [postId], references: [id])
    text String
}

enum Role {
  USER
  ADMIN
}